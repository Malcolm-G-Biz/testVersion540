<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<datasource jndi-name="java:/test540CollaborationDB" pool-name="test540Collaboration" enabled="true" jta="false" use-ccm="true">
		<connection-url>${env.DB_CONNECTION_URL:jdbc:postgresql://localhost:5432/test540Collaboration?currentSchema=public}</connection-url>
		<driver>postgresql</driver>
		<transaction-isolation>TRANSACTION_READ_COMMITTED</transaction-isolation>
		<pool>
			<min-pool-size>5</min-pool-size>
			<max-pool-size>10</max-pool-size>
		</pool>
		<security>
			<user-name>${env.DB_USERNAME:sa}</user-name>
			<password>${env.DB_PASSWORD:sa}</password>
		</security>
		<validation>
			<valid-connection-checker class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLValidConnectionChecker"/>
			<validate-on-match>true</validate-on-match>
			<background-validation>false</background-validation>
		</validation>
	</datasource>
</datasources>
